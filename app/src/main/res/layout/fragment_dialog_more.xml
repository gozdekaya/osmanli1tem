<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#B3000000">
    <ImageButton
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="30dp"
        android:padding="10dp"
        android:src="@drawable/ic_close_black_24dp"
        android:background="@null"/>


  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
     android:layout_centerHorizontal="true"
      android:orientation="vertical">
<LinearLayout
    android:id="@+id/linsepet"
    android:layout_marginTop="100dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/sepetim"

        android:src="@drawable/placeholder"
        android:layout_marginRight="1dp"
        android:layout_marginLeft="5dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:civ_border_color="#bbbb"
        app:civ_border_width="0.5dp"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/adres_ekle"
    android:textColor="#fff"
    android:textStyle="normal"
    android:layout_gravity="center_horizontal"
    android:layout_margin="5dp"/>
</LinearLayout>
      <LinearLayout
          android:id="@+id/linsiparis"
          android:layout_marginTop="50dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical">

          <de.hdodenhof.circleimageview.CircleImageView
              android:id="@+id/siparislerim"
              android:src="@drawable/lock"
              android:layout_marginRight="1dp"
              android:layout_marginLeft="5dp"
              android:layout_width="110dp"
              android:layout_height="110dp"
             />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/kart_ekle"
              android:textColor="#fff"
              android:textStyle="normal"
              android:layout_gravity="center_horizontal"
              android:layout_margin="5dp"/>
      </LinearLayout>

      <LinearLayout
          android:id="@+id/linkart"
          android:layout_marginTop="50dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical">

          <de.hdodenhof.circleimageview.CircleImageView
              android:id="@+id/kartlarim"
              android:src="@drawable/shop"
              android:layout_marginRight="1dp"
              android:layout_marginLeft="5dp"
              android:layout_width="100dp"
              android:layout_height="100dp"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/sepet"
              android:textColor="#fff"
              android:textStyle="normal"
              android:layout_gravity="center_horizontal"
              android:layout_margin="5dp"/>
      </LinearLayout>
  </LinearLayout>
    </RelativeLayout>